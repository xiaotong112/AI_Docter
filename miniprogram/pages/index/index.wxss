/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  width: 100%;
}

.container {
  width: 100%;
  background: linear-gradient(180deg, #87CEEB 0%, #FFFFFF 50%);
  padding: 0;
  box-sizing: border-box;
}

.swiper-section {
  width: 100%;
  padding: 20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.nav-grid {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  background: transparent;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 15rpx 10rpx;
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.grid-item text {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #333;
}
